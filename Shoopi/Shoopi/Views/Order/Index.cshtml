@model DAO.ViewModels.OrderResponse
@{

    ViewData["Title"] = "Index";
  
}

<style>
    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .order-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .order-content {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .order-id {
        font-weight: bold;
        font-size: 16px;
    }

    .order-status {
        font-size: 14px;
        background-color: #f28123;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .order-body {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
    }

    .view-details-btn {
        background-color: #f28123;
        color: white;
        padding: 8px 15px;
        border-radius: 5px;
    }

    .order-details {
        margin-top: 15px;
    }

    .order-item {
        display: flex;
        justify-content: space-between;
        padding: 8px 0;
        border-bottom: 1px solid #f1f1f1;
    }

    .item-name {
        font-weight: bold;
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .item-quantity,
    .item-price {
        color: #888;
    }
</style>

<div class="container">
    <h1>Your Orders</h1>
    @if (TempData["NoOrdersMessage"] != null)
    {
        <div class="alert alert-info">
            @TempData["NoOrdersMessage"]
        </div>
    }

    @foreach (var order in Model.Orders)
    {
        <div id="orderlist" class="order-card">
            <div class="order-content">
                <div class="order-header">
                    <span class="order-id">Order #@order.OrderId</span>
                    <div style="color: red">@order.OrderStatus</div>
                </div>

                <div class="order-body">
                    <div>
                        <div class="order-details">
                            @foreach (var item in order.OrderDetails)
                            {
                                <div class="order-item">
                                    <span class="item-name">@item.ProductName x @item.Quantity</span>
                                    <span class="item-quantity"> - @item.TotalPrice.ToString("#,##0") VND </span>
                                </div>
                                
                            }
                            
                        </div>
                        <div class="order-total">
                            Total price: @order.TotalPrice.ToString("#,##0") VND

                        </div>
                    </div>

                    <button class="view-details-btn" data-bs-toggle="collapse" data-bs-target="#order-details-@order.OrderId" aria-expanded="false" aria-controls="order-details-@order.OrderId">
                        View Details
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="pagination-wrap d-flex justify-content-center" id="pagination">
            <ul class="pagination">
                <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                    <a class="page-link" asp-controller="Order" asp-route-pageIndex="@(Model.PageIndex - 1)">Prev</a>
                </li>
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.PageIndex == i ? "active" : "")">
                        <a class="page-link" asp-controller="Order" asp-route-pageIndex="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-controller="Order" asp-route-pageIndex="@(Model.PageIndex + 1)">Next</a>
                </li>
            </ul>
        </div>
    </div>
</div>

<script>
    window.onload = function () {
        var element = document.getElementById("orderlist");
        if (element) {
            var elementPosition = element.getBoundingClientRect().top;
            var offsetPosition = elementPosition + window.pageYOffset - (window.innerHeight / 2) + (element.offsetHeight / 2) - 150;

            window.scrollTo({
                top: offsetPosition,
                behavior: 'smooth'
            });
        }
    };
</script>
