@{
    var user = Context.User;
    if (User.Identity.IsAuthenticated)
    {
        if (user.IsInRole("Admin"))
        {
            Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutHeader.cshtml";
    }
}
