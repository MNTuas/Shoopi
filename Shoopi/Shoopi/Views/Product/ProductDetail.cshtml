@model Shoopi.Data.Product

<style>

	button.cart-btn {
		font-family: 'Poppins', sans-serif;
		display: inline-block;
		background-color: #F28123;
		color: #fff;
		padding: 10px 20px;
		border-radius: 15px;
		border:none
	}

		button.cart-btn i {
			margin-right: 5px;
		}

</style>
<!-- single product -->

<div class="single-product mt-150 mb-150" id="productlist" >
	<div class="container">
		<div class="row" >
			<div class="col-md-5">
				<div class="single-product-img" >
					<img src="~/assets/img/products/product-img-5.jpg" alt="">
				</div>
			</div>
			<div class="col-md-7">
				<div class="single-product-content" >
					<h3>@Model.ProductName</h3>
					<p class="single-product-pricing"><span>Per Kg</span> @Model.Price</p>
					<p>@Model.Detail</p>
					<div class="single-product-form">

						<input id="quantity" type="number" placeholder="0" name="quantity">

						<a class="cart-btn" href="#" onclick="addToCart(@Model.ProductId); return false;">Add to Cart</a>

						
						<p><strong>Categories: </strong>@Model.Type.TypeName</p>
					</div>
					<h4>Share:</h4>
					<ul class="product-share">
						<li><a href=""><i class="fab fa-facebook-f"></i></a></li>
						<li><a href=""><i class="fab fa-twitter"></i></a></li>
						<li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
						<li><a href=""><i class="fab fa-linkedin"></i></a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- end single product -->

<!--keo xuong giua-->
<script>
	window.onload = function () {
		var element = document.getElementById("productlist");
		if (element) {
			var elementPosition = element.getBoundingClientRect().top;
			var offsetPosition = elementPosition + window.pageYOffset - (window.innerHeight / 2) + (element.offsetHeight / 2);

			window.scrollTo({
				top: offsetPosition,
				behavior: 'smooth'
			});
		}
	};
		function addToCart(productId) {
			// Get the quantity from the input field
			var quantity = document.getElementById('quantity').value;

			// Perform AJAX request
			$.ajax({
				url: '@Url.Action("AddToCart", "Cart")',
				type: 'POST',
				data: { id: productId, quantity: quantity },
				success: function (response) {
					if (response.success) {
						$('.cart-count').text(response.totalQuantity);
					} else {
						alert(response.message);
					}
				},
				error: function () {
					alert('An error occurred while adding the item to the cart.');
				}
			});
		}
</script>

